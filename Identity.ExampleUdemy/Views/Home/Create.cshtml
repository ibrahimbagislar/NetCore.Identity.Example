@model CreateUserModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" class="p-3 mx-auto w-75 shadow">
    <div class="mb-3">
        <label>Kullanıcı Adı:</label>
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mail:</label>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" class="form-control"/>
    </div>
    <div class="mb-3">
        <label>Cinsiyet:</label>
        <span class="text-danger" asp-validation-for="@Model.Gender"></span>
        <input asp-for="@Model.Gender" class="form-control"/>
    </div>
    <div class="mb-3">
        <label>Şifre:</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" class="form-control" type="password"/>
    </div>
    <div class="mb-3">
        <label>Şifre Tekrar:</label>
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input asp-for="@Model.ConfirmPassword" class="form-control" type="password"/>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </div>

    <div class="text-danger mt-4" asp-validation-summary="ModelOnly">

    </div>
</form>

