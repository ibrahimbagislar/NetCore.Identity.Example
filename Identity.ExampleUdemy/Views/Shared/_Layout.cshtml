<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Identity App</title>

    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/home/index">IDENTITYAPP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="Index" asp-controller="Profile">Profilim</a>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/Home/Create">Kayıt Ol</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Home/SignIn">Giriş Yap</a>
                            </li>
                        }
                        @if (User != null && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/Home/getuserinfo">AdminBilgi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/user">Kullanıcıları görüntüle</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/role">Roller</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="ChangePassword">Şifreni Değiştir</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="signout" asp-controller="Home">Çıkış Yap</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()

    <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>
