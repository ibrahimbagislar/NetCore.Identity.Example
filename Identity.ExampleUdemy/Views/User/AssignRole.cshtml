@model RoleAssignSendModel
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-action="AssignRole" method="post" class="p-3 mx-auto w-75">

    <input type="hidden" asp-for="@Model.UserId" />

    <ul class="list-group">
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <input type="hidden" asp-for="@Model.Roles[i].Name" />
            <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
            <li class="list-group-item">
                <input class="form-check-input" asp-for="@Model.Roles[i].Exist">
                <label class="form-check-label" for="firstCheckboxStretched">@Model.Roles[i].Name</label>
            </li>
        }
    </ul>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

    <div class="text-danger mt-4" asp-validation-summary="ModelOnly">
    </div>
</form>


